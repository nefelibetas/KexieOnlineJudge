<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fish.mapper.ColumnMapper">
    <update id="updateInfo" parameterType="com.fish.entity.dto.ColumnDTO">
        update oj_column
        <set>
            <if test="columnName != null">`column_name` = #{columnName}</if>
            <if test="columnDescribe != null">`column_describe` = #{columnDescribe}</if>
        </set>
        where column_id = #{columnId}
    </update>
</mapper>